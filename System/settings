os.loadAPI("/System/API/v0.1.0-beta.1")

local Manager = Application():set {terminatable = true, backgroundColour = colors.black, color = colors.gray}
Manager:importFromTML("/System/TML/settings.tml")

function initialize()
    Manager:addNode(Button("X"):set{Y = 1, X = "$parent.width", width = 1, height = 1, backgroundColour = colors.white, color = colors.gray, activeBackgroundColor = colors.lightGray, id = "Close"})
    local Close = Manager:query "#Close"
    Close:on("trigger", function(self)
      shell.run("/System/Main")
    end)
    -- Manager:addNode(Label(tostring(textutils.formatTime(os.time(), false))):set{X = 1, Y=1, backgroundColour = colors.white}) Displays time, but dosen't change it regularly
end
initialize()
Manager:start()